# FlashScalper Environment Configuration Example
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# =============================================================================
# EXCHANGE SELECTION
# =============================================================================
# Choose which exchange to use: 'aster' or 'paradex'
EXCHANGE=aster

# =============================================================================
# ASTER EXCHANGE (Default)
# =============================================================================
ASTER_API_KEY=your_aster_api_key
ASTER_SECRET_KEY=your_aster_secret_key
ASTER_BASE_URL=https://fapi.asterdex.com

# =============================================================================
# PARADEX EXCHANGE (Alternative)
# =============================================================================
# Get credentials from: https://testnet.paradex.trade (testnet) or https://paradex.trade (mainnet)
PARADEX_API_KEY=your_paradex_api_key
PARADEX_SECRET_KEY=your_paradex_secret_key
PARADEX_BEARER_TOKEN=your_paradex_bearer_token

# Paradex Endpoints (testnet by default)
PARADEX_REST_URL=https://api.testnet.paradex.trade
PARADEX_WS_URL=wss://ws.api.testnet.paradex.trade/v1

# For production (mainnet), use:
# PARADEX_REST_URL=https://api.paradex.trade
# PARADEX_WS_URL=wss://ws.api.paradex.trade/v1

# =============================================================================
# LLM / AI AGENT (Optional)
# =============================================================================
# Get API key from: https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=deepseek/deepseek-chat-v3-0324
LLM_ENABLED=true
LLM_TIMEOUT_MS=10000

# LLM Retry Configuration
LLM_RETRY_MAX_RETRIES=3
LLM_RETRY_INITIAL_DELAY_MS=100
LLM_RETRY_MAX_DELAY_MS=5000

# LLM Circuit Breaker
LLM_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
LLM_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
LLM_CIRCUIT_BREAKER_TIMEOUT_MS=60000

# LLM Rate Limiting
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=60
LLM_RATE_LIMIT_BURST_SIZE=60

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Position Sizing
SCALPER_LEVERAGE=10
SCALPER_POSITION_SIZE_PERCENT=25
SCALPER_MIN_POSITION_SIZE_USD=10
SCALPER_MAX_POSITION_SIZE_USD=150
SCALPER_MAX_EXPOSURE_PERCENT=80
SCALPER_MAX_POSITIONS=20

# Risk Management
SCALPER_RISK_PER_TRADE_PERCENT=2
SCALPER_MAX_DAILY_LOSS_PERCENT=10
SCALPER_MAX_DRAWDOWN_PERCENT=20

# Profit Targets
SCALPER_TAKE_PROFIT_ROE=1.5
SCALPER_TAKE_PROFIT_ROE_HIGH=2.5
SCALPER_STOP_LOSS_ROE=-0.4
SCALPER_MIN_PROFIT_USD=0.20

# Trailing Stops
SCALPER_TRAILING_ACTIVATION_ROE=0.5
SCALPER_TRAILING_DISTANCE_ROE=0.2

# Timing
SCALPER_TICK_INTERVAL_MS=3000
SCALPER_MAX_HOLD_TIME_MINUTES=5

# Signal Requirements
SCALPER_MIN_COMBINED_CONFIDENCE=58
SCALPER_MIN_SCORE=45
SCALPER_REQUIRE_LLM_AGREEMENT=false

# Technical Indicators
SCALPER_RSI_PERIOD=14
SCALPER_RSI_OVERSOLD=35
SCALPER_RSI_OVERBOUGHT=65
SCALPER_MIN_VOLUME_RATIO=0.5

# Kline Settings
SCALPER_KLINE_INTERVAL=5m
SCALPER_KLINE_COUNT=60

# Paper Trading (HIGHLY RECOMMENDED FOR TESTING)
SCALPER_PAPER_TRADING=true
SCALPER_PAPER_TRADING_ON_ERROR=true

# =============================================================================
# REDIS (Optional - for worker mode)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT (Optional - for API mode)
# =============================================================================
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# METRICS & MONITORING
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# MEMORY SYSTEM
# =============================================================================
MEMORY_ENABLED=true
MEMORY_MAX_TRADES=1000
MEMORY_PERSISTENCE_ENABLED=true
MEMORY_PERSISTENCE_PATH=data/memory

# =============================================================================
# ARTIFACT COLLECTION (Optional)
# =============================================================================
ARTIFACT_COLLECTION_ENABLED=false
ARTIFACT_BASE_DIR=./artifacts
ARTIFACT_LOG_FILE=/tmp/scalper-live.log

# GCP Storage (Optional)
# ARTIFACT_STORAGE_PROVIDER=gcp
# GCP_STORAGE_BUCKET=your-bucket-name
# GCP_STORAGE_PROJECT_ID=your-project-id
# GCP_STORAGE_PUBLIC_URL_BASE=https://storage.googleapis.com/your-bucket-name

# =============================================================================
# WORKER CONFIGURATION (Optional - for distributed mode)
# =============================================================================
WORKER_CONCURRENCY=10
SIGNAL_WORKER_INTERVAL_MS=15000
POSITION_CHECK_INTERVAL_MS=5000
