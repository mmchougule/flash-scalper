# =============================================================================
# PARADEX CONFIGURATION
# =============================================================================

# Account Configuration
PARADEX_ACCOUNT_ADDRESS=0x...                    # Your Ethereum address
PARADEX_PRIVATE_KEY=0x...                        # Your private key (KEEP SECURE!)
PARADEX_JWT=eyJ...                               # JWT token from Paradex API
PARADEX_API_KEY=your_api_key                     # (Optional) API key

# Markets to trade (comma-separated)
PARADEX_MARKETS=BTC-USD-PERP,ETH-USD-PERP,SOL-USD-PERP

# API Endpoints (defaults to testnet)
PARADEX_REST_URL=https://api.testnet.paradex.trade/v1
PARADEX_WS_URL=wss://ws.api.testnet.paradex.trade/v1

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Position Sizing
SCALPER_LEVERAGE=10                              # Trading leverage (1-20x)
SCALPER_POSITION_SIZE_PERCENT=25                 # Position size as % of equity
SCALPER_MAX_POSITIONS=5                          # Maximum concurrent positions
SCALPER_MIN_POSITION_SIZE_USD=10                 # Minimum position size
SCALPER_MAX_POSITION_SIZE_USD=1000               # Maximum position size

# Risk Management
SCALPER_TAKE_PROFIT_ROE=2.0                      # Take profit at 2% ROE
SCALPER_STOP_LOSS_ROE=-0.5                       # Stop loss at -0.5% ROE
SCALPER_MAX_HOLD_TIME_MINUTES=60                 # Max hold time (minutes)
SCALPER_MAX_DAILY_LOSS_PERCENT=5                 # Daily loss limit (%)
SCALPER_MAX_EXPOSURE_PERCENT=80                  # Maximum exposure (% of equity)

# Signal Requirements
SCALPER_MIN_COMBINED_CONFIDENCE=58               # Minimum signal confidence (%)
SCALPER_MIN_SCORE=45                             # Minimum signal score (0-100)

# Technical Indicators
SCALPER_RSI_PERIOD=14
SCALPER_RSI_OVERSOLD=35
SCALPER_RSI_OVERBOUGHT=65
SCALPER_KLINE_INTERVAL=5m                        # Candlestick interval
SCALPER_KLINE_COUNT=60                           # Number of candles to analyze

# =============================================================================
# LLM CONFIGURATION (OPTIONAL)
# =============================================================================

LLM_ENABLED=false                                # Enable LLM analysis
OPENROUTER_API_KEY=your_openrouter_key          # OpenRouter API key
OPENROUTER_MODEL=deepseek/deepseek-chat-v3-0324

# =============================================================================
# LIVE STREAM DISPLAY
# =============================================================================

DISPLAY_INTERVAL_MS=5000                         # Update interval (milliseconds)
CLEAR_CONSOLE=true                               # Clear console on each update
LOG_LEVEL=info                                   # Log level: trace, debug, info, warn, error

# =============================================================================
# SYSTEM
# =============================================================================

NODE_ENV=development                             # Environment: development, production
AGENT_ID=paradex-live-001                        # Agent identifier
USER_ID=system                                   # User identifier

# Memory System
MEMORY_ENABLED=true                              # Enable trade history memory
MEMORY_MAX_TRADES=1000                           # Max trades to store
MEMORY_PERSISTENCE_ENABLED=true                  # Enable persistence to disk
MEMORY_PERSISTENCE_PATH=data/memory              # Memory storage path

# Metrics
METRICS_ENABLED=true                             # Enable Prometheus metrics
METRICS_PORT=9090                                # Metrics server port
